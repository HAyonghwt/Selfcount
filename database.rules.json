{
  "rules": {
    ".read": true, // 데이터베이스의 모든 데이터를 누구나 읽을 수 있습니다.
    ".write": "auth != null", // 인증된(로그인한) 사용자만 데이터를 쓸 수 있습니다.
    "scoreLogs": {
      ".indexOn": ["playerId"]
    },
    "scores": {
      "$playerId": {
        "$courseId": {
          "$holeNumber": {
            ".write": "auth != null" // 인증된 사용자만 점수 수정 가능
          }
        }
      }
    },
    "players": {
      ".read": true,
      ".write": "auth != null"
    },
    "tournaments": {
      ".read": true,
      ".write": "auth != null"
    },
    "config": {
      ".read": true,
      ".write": "auth != null"
    }
  }
}
